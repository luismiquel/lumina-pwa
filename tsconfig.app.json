{
    "compilerOptions":  {
                            "target":  "ES2022",
                            "useDefineForClassFields":  true,
                            "lib":  [
                                        "ES2022",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "module":  "ESNext",
                            "skipLibCheck":  true,
                            "moduleResolution":  "Bundler",
                            "resolveJsonModule":  true,
                            "isolatedModules":  true,
                            "noEmit":  true,
                            "jsx":  "react-jsx",
                            "strict":  true,
                            "noImplicitAny":  true,
                            "noUncheckedIndexedAccess":  true,
                            "types":  [
                                          "vite/client"
                                      ],
                            "baseUrl":  ".",
                            "paths":  {
                                          "@/*":  [
                                                      "src/*"
                                                  ]
                                      }
                        },
    "include":  [
                    "src"
                ],
    "exclude":  [
                    "src/_trash",
                    "src/_legacy"
                ]
}
